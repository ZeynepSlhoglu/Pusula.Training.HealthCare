@using Microsoft.Extensions.Localization
@using Pusula.Training.HealthCare.Addresses
@using Pusula.Training.HealthCare.Localization

@inject IStringLocalizer<HealthCareResource> L

<HcCard CardIcon="far fa-address-book" Title="@L["Addresses"]"
        NoContent="@(Addresses == null || !Addresses.Any())">
    <ChildContent>
        @if (Addresses != null && Addresses.Any())
        {
            <div class="patient-address-list">
                @foreach (var address in Addresses)
                {
                    <div class="patient-address-list-item">
                        <span class="fw-700">@address.AddressTitle</span>
                        <p class="m-0">@address.AddressLine @address.District.Name @address.District.City.Name / @address.District.City.Country.Name</p>
                    </div>
                }
            </div>
        }
    </ChildContent>
</HcCard>

@code {

    [Parameter]
    public IEnumerable<AddressDto>? Addresses { get; set; }

}