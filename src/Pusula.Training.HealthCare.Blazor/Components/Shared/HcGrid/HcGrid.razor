<style>
    .hc-grid {
        display: grid;
        height: 100%;
    }
</style>

<div class="hc-grid"
     style="grid-template-columns: repeat(@X,1fr);grid-template-rows: repeat(@Y,1fr);gap: @(Gap)px">
    @foreach (var content in _contents)
    {
        @content
    }
</div>

@code {

    [Parameter]
    public int X { get; set; }

    [Parameter]
    public int Y { get; set; }

    [Parameter]
    public int Gap { get; set; } = 10;

    [Parameter]
    public RenderFragment ChildContent { set => _contents.Add(value); }

    private List<RenderFragment> _contents = [];
}