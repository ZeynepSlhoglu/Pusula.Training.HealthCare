                                </Field>

                                <Field ColumnSize="ColumnSize.Is6">
                                    <FieldLabel>@L["Address:City"] *</FieldLabel>
                                    <Select TValue="Guid" SelectedValue="@EditingAddressCityId" SelectedValueChanged="@EditingAddressCityIdChangedAsync">
                                        <SelectItem></SelectItem>
                                        @foreach (var city in CityList)
                                        {
                                            <SelectItem Value="@city.Id">@city.Name</SelectItem>
                                        }
                                    </Select>
                                </Field>

                                <Field ColumnSize="ColumnSize.Is6">
                                    <FieldLabel>@L["Address:District"] *</FieldLabel>
                                    <Select TValue="Guid" @bind-SelectedValue="@EditingPatient.DistrictId">
                                        <SelectItem></SelectItem>
                                        @foreach (var district in DistrictList)
                                        {
                                            <SelectItem Value="@district.Id">@district.Name</SelectItem>
                                        }
                                    </Select>
                                </Field>

                                <Validation MessageLocalizer="@LH.Localize">
                                    <Field ColumnSize="ColumnSize.Is12">
                                        <FieldLabel>@L["Address"] *</FieldLabel>
                                        <MemoEdit @bind-Text="@EditingPatient.Address" Rows="3" AutoSize>
                                            <Feedback></Feedback>
                                        </MemoEdit>
                                    </Field>
                                </Validation>
                            </div>
                        </TabPanel>
                    </Content>
                </Tabs>


            </Validations>
        </ModalBody>
        <ModalFooter>
            <Button Color="Color.Secondary"
                    Clicked="CloseEditPatientModalAsync">
                @L["Cancel"]
            </Button>
            <SubmitButton Form="EditPatientForm" Clicked="UpdatePatientAsync"/>
        </ModalFooter>
    </Form>
</ModalContent>
</Modal>