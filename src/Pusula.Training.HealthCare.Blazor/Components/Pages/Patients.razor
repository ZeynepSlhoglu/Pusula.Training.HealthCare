                <Validations @ref="@NewPatientValidations"
                             Mode="ValidationMode.Auto"
                             Model="@NewPatient"
                             ValidateOnLoad="false">
                    <Tabs SelectedTab="@_selectedCreateModalTab" SelectedTabChanged="@OnSelectedCreateModalTabChanged">
