@page "/notifications"
@inject IJSRuntime JS
 

<script>
    window.connection.on("ReceiveNotification", (message) => { 
        Swal.fire({
            toast: true,
            position: 'top-end',
            showConfirmButton: false,
            timer: 4000,
            title: message,
            icon: 'success'
        });
    });
</script>
 